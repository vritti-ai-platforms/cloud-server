{
  "name": "vritti-api-nexus",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "check": "biome check --write .",
    "format": "biome format --write .",
    "start": "nest start",
    "dev": "nest start --watch",
    "debug": "nest start --debug --watch",
    "prod": "node dist/main",
    "lint": "biome lint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:generate": "set -a && . ./.env && set +a && drizzle-kit generate",
    "db:push": "set -a && . ./.env && set +a && NODE_TLS_REJECT_UNAUTHORIZED=0 drizzle-kit push",
    "db:migrate": "set -a && . ./.env && set +a && NODE_TLS_REJECT_UNAUTHORIZED=0 drizzle-kit migrate",
    "db:studio": "set -a && . ./.env && set +a && NODE_TLS_REJECT_UNAUTHORIZED=0 drizzle-kit studio",
    "db:reset": "set -a && . ./.env && set +a && NODE_TLS_REJECT_UNAUTHORIZED=0 drizzle-kit push --force",
    "db:drop": "set -a && . ./.env && set +a && docker exec -i $(docker ps -q --filter name=postgres) psql -U postgres -d saas_db -c 'DROP SCHEMA IF EXISTS cloud CASCADE;'",
    "db:start": "docker compose -f local-db-compose.yml up -d",
    "db:stop": "docker compose -f local-db-compose.yml down"
  },
  "dependencies": {
    "@ai-sdk/google": "^3.0.13",
    "@fastify/cookie": "^11.0.2",
    "@fastify/csrf-protection": "^7.1.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.4",
    "@getbrevo/brevo": "^3.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/swagger": "^11.2.5",
    "@simplewebauthn/server": "^13.2.2",
    "@vritti/api-sdk": "^0.1.7",
    "ai": "^6.0.50",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "drizzle-orm": "^1.0.0-beta.3-36e9b9e",
    "fastify": "5.6.2",
    "fastify-raw-body": "^5.0.0",
    "otplib": "12.0.1",
    "pg": "^8.16.0",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@compodoc/compodoc": "^1.1.31",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.16.0",
    "@types/qrcode": "^1.5.6",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^1.0.0-beta.3-36e9b9e",
    "jest": "^30.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest"
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
